<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/planets_spinner"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/pixel_10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTintMode="src_over"
            android:dropDownWidth="wrap_content"
            android:dropDownSelector="@color/fragment_content_detail_overlay_end"
            android:spinnerMode="dropdown"
            android:popupBackground="@color/fragment_content_detail_overlay_end"
            android:textAlignment="center"
            android:textStyle="bold"
            app:smsp_arrowColor="@color/white"
            app:smsp_itemColor="@color/white"
            app:smsp_itemListColor="@color/grey_40"
            app:smsp_itemListHintBackgroundColor="@color/greyhome"
            app:smsp_itemSize="16sp"
            app:smsp_selectedItemListColor="@color/white"
            app:smsp_hint="@string/choose_season"
            app:smsp_hintColor="@color/white"
            app:smsp_isOutlined="true"
            app:smsp_multilineError="true"
            app:smsp_outlinedBoxColor="@color/white"
            app:smsp_outlinedBoxRadius="12dp"
            app:smsp_outlinedHintPadding="4dp"
            app:smsp_outlinedHintStartX="10dp"
            app:smsp_outlinedStrokeWidth="1dp" />
    </LinearLayout>



</layout>
