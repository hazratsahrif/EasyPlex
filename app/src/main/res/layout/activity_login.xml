<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/loginLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnClose"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="16dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="#2F3337"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="6dp"
                            android:src="@drawable/round_close_24"
                            app:tint="@color/white">


                        </ImageView>


                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.Toolbar>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="18dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="12dp"
                            android:elevation="0dp"
                            app:cardBackgroundColor="#2F3337"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@drawable/smsp_logo" />


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Welcome back"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Hello there, Sign in to continue"
                            android:textColor="@color/white" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:hint="Your Email"
                            android:textColorHint="@color/mtrl_textinput_default_box_stroke_color"
                            android:theme="@style/TextInputLayoutStyle"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeErrorColor="#F33636"
                            app:startIconDrawable="@drawable/ic_mail"
                            app:startIconTint="@color/mtrl_textinput_default_box_stroke_color"
                            app:boxStrokeWidthFocused="1.5dp"
                            app:errorEnabled="true"
                            app:errorTextColor="#F33636"
                            app:hintTextColor="@color/ddfb4b">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:inputType="textEmailAddress"
                                android:padding="16dp"

                                android:textColor="@color/white" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="Password"
                            android:textColorHint="@color/mtrl_textinput_default_box_stroke_color"
                            android:theme="@style/TextInputLayoutStyle"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeErrorColor="@color/red_A700"
                            app:boxStrokeWidthFocused="1.5dp"
                            app:errorEnabled="true"
                            app:errorTextColor="@color/red_A700"
                            app:hintTextColor="@color/ddfb4b"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/mtrl_textinput_default_box_stroke_color">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:padding="16dp"
                                android:textColor="@color/white" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/forget_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Forgot Password?"
                            android:textColor="#DA9F9E9E"
                            android:textSize="12sp"


                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginTop="22dp"
                            android:padding="14dp"
                            android:text="Login now"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:backgroundTint="@color/ddfb4b"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_google"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginTop="8dp"
                            android:drawableLeft="@drawable/flat_color_icons_google"
                            android:padding="14dp"
                            android:text="Continue with Google"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:backgroundTint="#2F3337"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="22dp"
                            android:text="Haven't signed up yet?"
                            android:textColor="#DA9F9E9E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/go_to_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="Create Account"
                            android:textColor="@color/ddfb4b"
                            android:textSize="12sp" />

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />


                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/linearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:indeterminate="true"
                            android:visibility="gone"
                            app:indicatorColor="@color/ddfb4b" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
