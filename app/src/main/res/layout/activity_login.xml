                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="@dimen/pixel_20dp" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@id/tubi_tv_controller_guideline_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_end="@dimen/pixel_20dp" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@id/tubi_tv_controller_guideline_seek_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="84dp" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@id/tubi_tv_controller_guideline_seek_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="84dp" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/background_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_welcome">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/welcome_bg_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="22dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/avatar_default" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="EasyPlex"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="22dp"

                        android:text="Watch free movies and TV shows online in HD on any device"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_login_layout"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:padding="14dp"
                        android:text="Login now"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:backgroundTint="@color/ddfb4b"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btn_skip"
                        android:layout_width="match_parent"

                        android:layout_height="54dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/black_90"
                        app:cornerRadius="8dp"
                        app:strokeColor="#40FFFFFF"
                        app:strokeWidth="1.3dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skip"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/pixel_4dp"
                                android:src="@drawable/round_arrow_forward_ios_24"

                                app:tint="@color/white" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/skipProgressIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="12dp"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:indicatorColor="@color/ddfb4b" />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>


</layout>
